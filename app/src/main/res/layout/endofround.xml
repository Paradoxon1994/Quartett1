<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/gameStateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="30sp"
            android:text="TEST ME PLEASE" />


        <TextView
            android:id="@+id/cardNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameStateTextView"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:text="Mercedes G-Klasse 4x4 squared" />

        <ImageView
            android:id="@+id/ownCardImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/cardNameTextView"
            android:layout_marginTop="16dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/ownAttrNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ownCardImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Enter Attribute Here" />

        <TextView
            android:id="@+id/ownAttrValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_alignTop="@+id/ownAttrNameTextView"
            android:layout_toEndOf="@+id/ownAttrNameTextView"
            android:text="19954" />

        <TextView
            android:id="@+id/opponentAttrNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ownAttrNameTextView"
            android:layout_below="@+id/ownAttrNameTextView"
            android:text="Enter Attribute Here" />

        <TextView
            android:id="@+id/opponentAttrValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_alignTop="@+id/opponentAttrNameTextView"
            android:layout_toEndOf="@+id/opponentAttrNameTextView"
            android:text="19945" />

        <ImageView
            android:id="@+id/opponentCardImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/opponentAttrNameTextView"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/fidgetspinnertheme" />

        <TextView
            android:id="@+id/opponentCardNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/opponentCardImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Fidget Spinner (Black Edition)" />

        <Button
            android:id="@+id/continueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:text="Continue" />




    </RelativeLayout>

</android.support.constraint.ConstraintLayout>